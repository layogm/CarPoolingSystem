<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Travel Info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#595040" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:divider="#111111"
        android:dividerPadding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="beginning|end" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="10" >

            <TextView
                android:id="@+id/tvHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Owner Info"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#424242" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:weightSum="10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="Name : "
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:text="Sample Name"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:weightSum="10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="Email : "
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:inputType="textEmailAddress"
                android:text="Sample Email"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <ImageButton
                android:id="@+id/bEmail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_buttons2"
                android:scaleType="fitCenter"
                android:src="@drawable/email" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lPhone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:weightSum="10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="Phone : "
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:inputType="phone"
                android:text="000000000000"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <ImageButton
                android:id="@+id/bCall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_buttons2"
                android:scaleType="fitCenter"
                android:src="@drawable/phone"
                android:text="Button" />

            <ImageButton
                android:id="@+id/bMsg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/custom_buttons2"
                android:scaleType="fitCenter"
                android:src="@drawable/message"
                android:text="Button" />
        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/lVehicleNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:weightSum="10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="Vehicle \nNum : "
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/tvVehicleNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:text="Sample Vehicle Num"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/lFare"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:weightSum="10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="Fare  :  "
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/tvFare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:text="Rs. 0"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>