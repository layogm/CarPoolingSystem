<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Register New User"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#595040" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="100" >

            <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:hint="Name"
            android:inputType="textPersonName" />


            <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:hint="Email"
            android:inputType="textEmailAddress" />


            <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:hint="Password"
            android:inputType="textPassword" />
            

            <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="20"
                android:hint="(At least 1 capital alphabet and 1 number and length > 6)" />

            <EditText
            android:id="@+id/etUnivRegNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:inputType="text"
            android:hint="University Registration Number" />

			<TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="20"
                android:hint="Format : DTU/..." />
            
            <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:hint="Phone Number(10 Digits)"
            android:inputType="phone" />
            <EditText
            android:id="@+id/etSecQues"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:hint="Security Question"
            />
            
            <EditText
            android:id="@+id/etSecAns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:hint="Answer"
            />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:weightSum="10" >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="Select\nSource      : " />


            <Spinner
            android:id="@+id/spinner_selectSource"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:weightSum="10" >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="Select\nDestination : " />


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="Delhi Technological University"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold|italic" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:weightSum="10" >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="Gender : " />


            <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >


            <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Male" />


            <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Female" />
            </RadioGroup>
            </LinearLayout>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="10" >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="Gender\nPreference : " />


            <Spinner
            android:id="@+id/spinner_selectGenderPrefs"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
            </LinearLayout>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="10" >


            <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical|left"
            android:text="Category : " />


            <RadioGroup
            android:id="@+id/rgCategory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <RadioButton
            android:id="@+id/rbOwner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Owner" />


            <RadioButton
            android:id="@+id/rbTraveller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Traveller" />


            <RadioButton
            android:id="@+id/rbBoth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Both" />
            </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lVehicleinfoAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="10" >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle no. 1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/etVehicleNum1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Vehicle Reg. Number" />

                <EditText
                    android:id="@+id/etVehicleMilage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" 
                    android:hint="Vehicle Milage" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle no. 2"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/etVehicleNum2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10" 
                    android:hint="Vehicle Reg. Number" />

                <EditText
                    android:id="@+id/etVehicleMilage2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" 
                    android:hint="Vehicle Milage" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle no. 3"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/etVehicleNum3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10" 
                    android:hint="Vehicle Reg.Number" />

                <EditText
                    android:id="@+id/etVehicleMilage3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" 
                    android:hint="Vehicle Milage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="20" >

                <LinearLayout
                    android:id="@+id/bSubmit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/custom_buttons2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/signup" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Create Account"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bReset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/custom_buttons2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/reset" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Reset Entries"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>